<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="#0F0F0F0F"/>
    </Style>

    <Style x:Key="CalcButton" TargetType="Button">
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#FFF3F3F3"/>
        <Setter Property="Foreground" Value="#222"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="12" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE9E9E9"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FFDCDCDC"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#FFEEEEEE"/>
                            <Setter Property="Foreground" Value="#888"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="OpButton" TargetType="Button" BasedOn="{StaticResource CalcButton}">
        <Setter Property="Background" Value="#FFDFECFF"/>
        <Setter Property="Foreground" Value="#0A3A8C"/>
    </Style>

    <Style x:Key="EqualsButton" TargetType="Button" BasedOn="{StaticResource CalcButton}">
        <Setter Property="Background" Value="#FF2E7D32"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="DisplayBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Margin" Value="12"/>
    </Style>
</ResourceDictionary>